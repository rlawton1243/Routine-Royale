#RoutineLogin connects to RoutineCreate and RoutineMain, this is the main login screen for a created account
<RoutineLogin>

    FloatLayout:

        Label:
            id: mainTitle
            text: 'ROUTINE ROYALE!'
            size_hint: 0.2, 0.2
            pos_hint: {"right":0.6, "top":1}

        Label:
            id: userPrompt
            text: 'Username: '
            size_hint: 0.5, 0.5
            pos_hint: {"left":0, "top":1}

        Label:
            id: passPrompt
            text: 'Password: '
            size_hint: 0.5, 0.5
            pos_hint: {"left":0, "top":0.75}

        Button:
            id: createAccount
            text: 'Create Account'
            size_hint: 0.5, 0.1
            pos_hint: {"left":0, "top":0.35}
            on_press: app.root.transition = SlideTransition(direction='left')
            on_release: root.manager.current = 'create'

        Button:
            id: accountLogin
            text: 'Login'
            size_hint: 0.5, 0.1
            pos_hint: {"right":1, "top":0.35}
            on_press: app.root.transition = FadeTransition()
            on_release: if root.LoginAccount(userInput.text, passInput.text) == True: root.manager.current = 'main'

        TextInput:
            id: userInput
            size_hint: 0.5, 0.1
            pos_hint: {"right":1, "top":0.8}


        TextInput:
            id: passInput
            size_hint: 0.5, 0.1
            pos_hint: {"right":1, "top":0.55}
            password: True


#RoutineCreate connects to RoutineLogin, this allows the user to create a new account
<RoutineCreate>

    FloatLayout:

        Label:
            id: createTitle
            text: 'Create Account'
            size_hint: 0.2, 0.2
            pos_hint: {"right":0.6, "top":1}

        Label:
            id: userPrompt
            text: 'Username: '
            size_hint: 0.5, 0.5
            pos_hint: {"left":0, "top":1}

        Label:
            id: passPrompt
            text: 'Password: '
            size_hint: 0.5, 0.5
            pos_hint: {"left":0, "top":0.75}

        Button:
            id: createAccount
            text: 'Return to login'
            size_hint: 0.5, 0.1
            pos_hint: {"left":0, "top":0.35}
            on_press: app.root.transition = SlideTransition(direction='right')
            on_release: root.manager.current = 'login'

        Button:
            id: accountLogin
            text: 'Create Account'
            size_hint: 0.5, 0.1
            pos_hint: {"right":1, "top":0.35}
            on_press:
                root.CreateAccount(userInput, passInput)

        TextInput:
            id: userInput
            size_hint: 0.5, 0.1
            pos_hint: {"right":1, "top":0.8}

        TextInput:
            id: passInput
            size_hint: 0.5, 0.1
            pos_hint: {"right":1, "top":0.55}
            password: True


#Login transition to show title screen, unsure if this will make final cut
<RoutineTransition>

    FloatLayout:

        Label:
            id: super
            text: 'ROUTINE'
            bold: True
            text_size: self.size
            font_size:

        Label:
            id: hot
            text: 'ROYALE'
            bold: True
            text_size: self.size


#RoutineMain connects to RoutineLogin, RoutineAccount, RoutineEvents, and RoutinePublicEventSearch. This is the hub to go to
#each screen of the main app
<RoutineMain>

    FloatLayout:

        Label:
            id: routineTitle
            text: 'Welcome to Routine Royale!'
            size_hint: 0.5, 0.1
            pos_hint: {"right":0.4, "top":1}

        Button:
            id: accountInfo
            text: 'Account information'
            size_hint: 0.3, 0.1
            pos_hint: {"right":1, "top": 1}
            on_press:
                root.shared.account.update_username()
                app.root.transition = SlideTransition(direction='down')
            on_release: root.manager.current = 'accountInfo'

        Button:
            id: userEvents
            text: 'User Events'
            size_hint: 0.4, 0.1
            pos_hint: {"right":0.7, "top": 0.75}
            on_press: app.root.transition = SlideTransition(direction='right')
            on_release: root.manager.current = 'userEvents'

        Button:
            id: userEvents
            text: 'Create Event'
            size_hint: 0.4, 0.1
            pos_hint: {"right":0.7, "top": 0.6}
            on_press: app.root.transition = SlideTransition(direction='right')
            on_release: root.manager.current = 'eventCreation'

        Button:
            id: userEvents
            text: 'List Public Events'
            size_hint: 0.4, 0.1
            pos_hint: {"right":0.7, "top": 0.45}
            on_press: app.root.transition = SlideTransition(direction='right')
            on_release:
                root.manager.current = 'publicEventSearch'


        Button:
            id: userEvents
            text: 'Join Private Event'
            size_hint: 0.4, 0.1
            pos_hint: {"right":0.7, "top": 0.3}
            on_press: app.root.transition = SlideTransition(direction='right')
            on_release: root.manager.current = 'privateEventSearch'


